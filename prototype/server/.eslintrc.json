{
  "root": true,
  "env": {
    "es2022": true,
    "worker": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "globals": {
    "KVNamespace": "readonly",
    "CryptoKeyPair": "readonly",
    "Response": "readonly",
    "Request": "readonly",
    "URL": "readonly",
    "crypto": "readonly"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "off",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "coverage/",
    "*.js",
    "*.test.ts",
    "*.spec.ts",
    "scripts/"
  ]
} 